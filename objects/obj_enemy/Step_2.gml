//facing right
if(direction = 0)
{
	sprite_index = spr_enemy_right;
}

//facing left
if(direction = 180)
{
	sprite_index = spr_enemy_left;
}

//facing up
if(direction = 90)
{
	sprite_index = spr_enemy_up;
}

//facing down
if(direction = 270)
{
	sprite_index = spr_enemy_down;
}